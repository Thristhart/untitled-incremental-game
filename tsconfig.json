{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "rootDir": "./src",
    "incremental": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "types": [],
    "baseUrl": "./src",
    "paths": {
      "@controls/*": ["controls/*"],
      "@features/*": ["features/*"],
      "@store/*": ["store/*"],
      "@ink/*": ["ink/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
